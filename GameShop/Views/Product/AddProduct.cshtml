@model Domain.Models.Product

@{
    ViewData["Title"] = "AddProduct";
}

<h4>Work</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PublishWork">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:flex;flex-direction:column">
                @Html.LabelFor(x=>x.Name)
                @Html.TextBoxFor(x=>x.Name)
            </div>
            <div class="form-group" style="display:flex;flex-direction:column">
                @Html.LabelFor(x=>x.Description)
                @Html.TextAreaFor(x=>x.Description)
            </div>
            <div class="form-group" style="display:flex;flex-direction:column">
                @Html.LabelFor(x=>x.Price)
                @Html.EditorFor(x=>x.Price)
            </div>
            <div class="form-group" style="display:flex;flex-direction:column">
                @Html.LabelFor(x=>x.Photos)
                @Html.EditorFor(x=>x.Photos)
            </div>
            <div class="form-group" style="display:flex;flex-direction:column">
                <label for="inputDate">Finish date</label>
                <input type="datetime-local" name="Finish" id="inputDate" runat="server">
            </div>
            

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section AddWScripts
{<script src="~/js/AddWork.js"></script>}
